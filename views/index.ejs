<!DOCTYPE html>
<head>
<title>Todo App</title>
<!--STYLESHEET LINK-->
<link rel="stylesheet" href="/css/style.css">
<!--GOOGLE FONT-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
<!--ICONS-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>
    <section class="todo-container">
        <h2>To Do List</h2>
        <section class="todo">
            <form action="/todo" method="POST" class="todo-header">
                <input type="text" name="title" placeholder="title">
                <textarea rows="6" cols="45" name="content" placeholder="content"></textarea>
                <button type="submit"><span class="fas fa-plus"></span>Add Todo</button>
            </form>
            <ul class="todo-list">
                <% todos.forEach( todo => { %>
                    <li class="todo-list-item">
                        <div class="todo-list-item-title"><%= todo.title %></div>
                        <div class="todo-list-item-content"><%= todo.content %></div>
                        <div class="actionButtons">
                            <a href="/todo/<%= todo._id %>" class="edit">
                                <span class="fas fa-edit"></span>
                            </a>
                            <span class="fas fa-times deleteTodo" todoId="<%= todo._id %>"></span>
                        </div>
                    </li>
                <% }) %>
            </ul>
        </section>
    </section>
    <script src="/js/main.js"></script>
</body>